<hibernate-mapping>
  <class lazy="false" name="ORM.Autor" table="`Autor`">
    <id column="`idAutor`" name="idAutor" type="integer" unsaved-value="0">
      <generator class="increment">
			</generator>
    </id>
    <property column="`nombre`" lazy="false" length="255" name="nombre" not-null="false" type="string"/>
    <set cascade="save-update,lock" lazy="true" name="ORM_MangaidManga" table="`Autor_Manga`">
      <key column="`AutoridAutor`" not-null="true"/>
      <many-to-many class="ORM.Manga" column="`MangaidManga`">
			</many-to-many>
    </set>
    <set cascade="save-update,lock" inverse="true" lazy="true" name="ORM_Novela">
      <key column="`AutoridAutor`" not-null="true"/>
      <one-to-many class="ORM.Novela"/>
    </set>
  </class>
</hibernate-mapping>
